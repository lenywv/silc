decl
	integer a;
	integer sum(integer x,integer y);
	integer diff(integer x,integer y);
enddecl
integer sum(integer x,integer y)
{
	decl
		integer z;
	enddecl
	z=1;
	write(x);
	return x+y-1+z;
}

integer diff(integer x,integer y)
{
	print(x);
	print(y);
	return x-y;
}
integer main ( )
{
	decl
		integer b;
	enddecl
	b=7;
	a=5;
	write(a);
	write(b);
	write(sum(a,b));
	print(a);
	print(b);
	write(diff(a,b));
}
